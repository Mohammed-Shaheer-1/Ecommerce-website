<section>
  <div class="container">

    <div class="row mt-4 mb-4 w-25">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
    </div>
    
    <table class="table" id="productsTable">
      <thead>
        <tr>
          {{!-- <th scope="col">No</th> --}}
          <th scope="col">Title</th>
          <th scope="col">discription</th>
          <th scope="col">price</th>
          <th scope="col">image</th>
          <th >Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          {{!-- <th scope="row">{{@index}}</th> --}}
          <td>{{this.name}}</td>
          <td>{{this.discription}}</td>
          <td>â‚¹{{this.price}}</td>
          <td><img style="width: 70px; hieght: 70px;" src="/product-imges/{{this._id}}.jpg" alt=""></td>
          <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
          <a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you want delete {{this.name}}')" class="btn btn-danger">Delete</a></td>
        </tr> 
        {{/each}}

      </tbody>
    </table>
  </div>
</section>
{{!-- datatables --}}
<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>