<section>
    <div class="row container">
        {{#each products}}
        <div class="card col-4 m-2"  style="width: 18rem;">
            <img src="/product-imges/{{this.product._id}}.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.product.name}}</h5>
                <h6 class="card-title " style="color:blue" >{{this.product.categery}}</h6>
                <h6 class="card-title">prize:{{this.product.price}}</h6>
                <h6 class="card-title">quantity :{{this.quantity}}</h6>
            </div>
        </div>
        {{/each}}
    </div>
</section>